<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_margin="1sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/visdew2"
                    android:layout_width= "40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3dp"
                    android:elevation="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="20dp"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/Comment_Profile_Image052"
                        android:layout_width= "40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        app:srcCompat="@drawable/my_acconute"
                        android:layout_alignParentLeft="true">

                    </ImageView>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/Comment_Name_View052"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/visdew2"
                    android:text="name"
                    android:textSize="11dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/visdew2" />


            </RelativeLayout>


            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/editshape2"
                android:textColor="@color/black"
                android:id="@+id/Comment_View_TextView052"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>


            <ImageView
                android:id="@+id/CommentImageViewer052"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </android.support.v7.widget.CardView>